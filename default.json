{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    "group:monorepos"
  ],
  "packageRules": [
    {
      "groupName": "persona monorepos",
      "groupSlug": "persona",
      "matchPackageNames": [
        "@privyid/persona",
        "@privyid/persona-icon",
        "@privyid/tailwind-preset",
        "@privyid/tailwind-extended",
        "@privyid/tailwind-animation",
        "@privyid/eslint-config-persona",
        "@privyid/browserslist-config"
      ]
    },
    {
      "groupName": "pena monorepos",
      "groupSlug": "pena",
      "matchPackagePrefixes": [
        "@privyid/pena"
      ]
    },
    {
      "groupName": "nuxt framework",
      "groupSlug": "nuxt",
      "matchPackageNames": [
        "nuxt",
        "nuxt3",
        "nuxt-edge",
        "@nuxt/schema",
        "@nuxt/kit",
        "@nuxt/vite-builder",
        "@nuxt/webpack-builder",
        "@nuxt/test-utils",
        "@nuxt/schema-edge",
        "@nuxt/kit-edge",
        "@nuxt/vite-builder-edge",
        "@nuxt/webpack-builder-edge",
        "@nuxt/test-utils-edge",
        "@nuxt/babel-preset-app",
        "@nuxt/builder",
        "@nuxt/cli",
        "@nuxt/config",
        "@nuxt/core",
        "@nuxt/generator",
        "@nuxt/server",
        "@nuxt/types",
        "@nuxt/utils",
        "@nuxt/vue-app",
        "@nuxt/vue-renderer",
        "@nuxt/webpack",
        "@nuxt/babel-preset-app-edge",
        "@nuxt/builder-edge",
        "@nuxt/cli-edge",
        "@nuxt/config-edge",
        "@nuxt/core-edge",
        "@nuxt/generator-edge",
        "@nuxt/server-edge",
        "@nuxt/types-edge",
        "@nuxt/utils-edge",
        "@nuxt/vue-app-edge",
        "@nuxt/vue-renderer-edge",
        "@nuxt/webpack-edge"
      ]
    },
    {
      "groupName": "eslint and plugins",
      "groupSlug": "eslint",
      "matchPackagePrefixes": [
        "eslint"
      ]
    }
  ]
}
